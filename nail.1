endif
if $version-major >= 15
  echo Running a new version..
  if $features =@ "regex"
    if $TERM =~ "^xterm\&.*"
      echo ..in an X terminal
    endif
  endif
  if [ [ true ] && [ [ $debug ] || [ $verbose ] ] ]
    echo Noisy, noisy
  endif
  if true && $debug || $verbose
    echo Left associativity, as is known from the shell
  endif
  if ! ! true && ! [ ! $debug && ! $verbose ]
    echo Unary operator support
  endif
endif
.Ed
.
